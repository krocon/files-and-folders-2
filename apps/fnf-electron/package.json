{
  "name": "fnf-electron",
  "version": "1.0.0",
  "description": "Electron wrapper for Files and Folders application",
  "main": "src/main.js",
  "scripts": {

    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",

    "dev": "concurrently \"npm:start-angular\" \"npm:start-nest\" \"wait-on http://localhost:4200 && npm:start\"",
    "start-angular": "cd ../fnf && npm run start",
    "start-nest": "cd ../fnf-api && npm run start",
    "start": "electron ."
  },
  "private": true,
  "dependencies": {
    "electron-serve": "^1.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "concurrently": "^9.2.0",
    "wait-on": "^8.0.3",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "expert.gui.fnf.electron",
    "productName": "Files and Folders",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "identity": "Marc Kronberg (XB35N4CZ95)"

    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}